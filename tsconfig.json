{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@domains/*": [
        "./src/domains/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@mock/*": [
        "./src/mock/*"
      ],
      "@stores/*": [
        "./src/stores/*"
      ],
      "@views/*": [
        "./src/views/*"
      ],
      "@styles/*": [
        "./src/styles/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/server"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
